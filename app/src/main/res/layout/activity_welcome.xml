<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/krem_arka"
    tools:context="com.example.akif.rahatla.WelcomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/koala_wecome_text"
        android:textColor="@color/background_white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/welcome_koala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/welcome_koala"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/welcome_koala"
        android:padding="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/koala" />
</android.support.constraint.ConstraintLayout>
